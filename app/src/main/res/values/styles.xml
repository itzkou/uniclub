<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textViewStyle">@style/ralewayTextview</item>
        <item name="android:buttonStyle">@style/raylewayButton</item>

    </style>

    <style name="ralewayTextview" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/raleway_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="raylewayButton" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="ImagePreviewerTheme">
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="searchView">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginRight">@dimen/searchMarginRL</item>
        <item name="android:layout_marginLeft">@dimen/searchMarginRL</item>
        <item name="android:layout_marginBottom">@dimen/searchMarginBM</item>
    </style>

    <style name="signUPField">
        <item name="android:paddingStart">9dp</item>
        <item name="android:background">@drawable/ed_signup</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/graySignUp</item>
        <item name="android:layout_width">@dimen/formWidth</item>
        <item name="android:layout_marginStart">@dimen/formRL</item>
        <item name="android:layout_marginEnd">@dimen/formRL</item>
        <item name="android:layout_marginBottom">@dimen/formTB</item>
        <item name="android:layout_marginTop">@dimen/formTB</item>
        <item name="android:drawablePadding">@dimen/formDrawablePadding</item>
        <item name="android:layout_height">26dp</item>
    </style>


    <style name="btnSignUP">
        <item name="android:background">@drawable/btn_signup</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">Sign up</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">@dimen/authBtnWidth</item>
        <item name="android:layout_height">@dimen/authBtnHeight</item>
        <item name="android:layout_marginStart">74dp</item>
        <item name="android:layout_marginEnd">74dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="builderAuth">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:text">Connect to use this feature</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/raleway_light</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:fontFamily">@font/raleway_semi_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:windowBackground">@drawable/builder_round</item>
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="TransparentAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:windowBackground">@drawable/builder_round</item>
        <item name="android:backgroundDimEnabled">false</item>


    </style>
    <style name="BtnParticipate">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginBottom">35dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/btn_participate</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">Participate</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="EventDetails">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
 <style name="Autocomplete" parent="Widget.AppCompat.Light.AutoCompleteTextView">
     <item name="android:popupBackground">@drawable/builder_round</item>
        <item name="android:dropDownHeight">wrap_content</item>

 </style>

</resources>
