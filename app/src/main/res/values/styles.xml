<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">@color/white</item>

    </style>

    <style name="ImagePreviewerTheme" >
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="searchView">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginRight">@dimen/searchMarginRL</item>
        <item name="android:layout_marginLeft">@dimen/searchMarginRL</item>
        <item name="android:layout_marginBottom">@dimen/searchMarginBM</item>
    </style>

    <style name="signUPField">
        <item name="android:background">@drawable/ed_signup</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">@dimen/SignUpEditext</item>
        <item name="android:layout_marginStart">@dimen/SignUpRL</item>
        <item name="android:layout_marginEnd">@dimen/SignUpRL</item>
        <item name="android:layout_marginBottom">@dimen/SignUpTB</item>
        <item name="android:layout_marginTop">@dimen/SignUpTB</item>
        <item name="android:drawablePadding">@dimen/SignUpDrawablePadding</item>
        <item name="android:layout_height">26dp</item>
    </style>

    <style name="SpinnerSignUP">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">@dimen/SignUpEditext</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/SignUpRL</item>
        <item name="android:layout_marginEnd">@dimen/SignUpRL</item>
        <item name="android:layout_marginBottom">@dimen/SignUpTB</item>
        <item name="android:layout_marginTop">@dimen/SignUpTB</item>
    </style>






</resources>
