<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textViewStyle">@style/ralewayTextview</item>
        <item name="android:buttonStyle">@style/raylewayButton</item>
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">
            @transition/change_image_transform</item>
        <item name="android:windowSharedElementExitTransition">
            @transition/change_image_transform</item>
    </style>

    <style name="ralewayTextview" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/raleway_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="raylewayButton" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="ImagePreviewerTheme">
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="edSignUP">
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/graySignUp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/formRL</item>
        <item name="android:layout_marginEnd">@dimen/formRL</item>
        <item name="android:layout_marginBottom">@dimen/formTB</item>
        <item name="android:layout_marginTop">@dimen/formTB</item>
        <item name="android:drawablePadding">@dimen/formDrawablePadding</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="btnSignUP" >
        <item name="android:background">@drawable/btn_signup</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">Sign up</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">@dimen/authBtnWidth</item>
        <item name="android:layout_height">@dimen/authBtnHeight</item>
        <item name="android:layout_marginStart">74dp</item>
        <item name="android:layout_marginEnd">74dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="builderAuth">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:text">Connect to use this feature</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/raleway_light</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:fontFamily">@font/raleway_semi_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:windowBackground">@drawable/builder_round</item>
        <item name="colorAccent">@color/orange</item>

    </style>

    <style name="CalendarDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:fontFamily">@font/raleway_semi_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="colorAccent">@color/orange</item>
        <item name="dialogCornerRadius">15dp</item>
        <item name="android:insetRight">20dp</item>
        <item name="android:insetLeft">20dp</item>



    </style>
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FullScreenDialogStyle" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:fontFamily">@font/raleway_semi_bold</item>
        <item name="android:background">@color/grayConstraint</item>
        <item name="android:textSize">18sp</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="TransparentAlertDialog" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">

        <item name="android:windowBackground">@color/transBlack</item>
        <item name="android:backgroundDimEnabled">false</item>


    </style>
    <style name="BtnParticipate">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginBottom">35dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/btn_participate</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">Participate</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="EventDetails">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
    <style name="Autocomplete" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:popupBackground">@drawable/autocomplete_round</item>
        <item name="android:fontFamily">@font/raleway_light</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/searchview</item>
        <item name="android:dropDownItemStyle">@layout/row_university</item>
        <item name="android:dropDownHeight">wrap_content</item>

    </style>

    <style name="RadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/ellipse</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/graySignUp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextInputLayoutAppearance" parent="Theme.AppCompat">
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/errorAppearance</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/graySignUp</item>
        <item name="colorControlNormal">@color/graySignUp</item>
        <item name="colorControlActivated">@color/orange</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="errorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#CD3C14</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NavigationTab" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/orange</item>
        <item name="tabIndicatorColor">@color/orange</item>
        <item name="tabTextAppearance">@style/NavigationTabTextAppeareance</item>
    </style>

    <style name="NavigationTabTextAppeareance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>
