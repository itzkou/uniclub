<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">@color/white</item>

    </style>

    <style name="ImagePreviewerTheme" >
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="searchView">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginRight">@dimen/searchMarginRL</item>
        <item name="android:layout_marginLeft">@dimen/searchMarginRL</item>
        <item name="android:layout_marginBottom">@dimen/searchMarginBM</item>
    </style>

    <style name="signUPField">
        <item name="android:background">@drawable/ed_signup</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:layout_width">@dimen/formWidth</item>
        <item name="android:layout_marginStart">@dimen/formRL</item>
        <item name="android:layout_marginEnd">@dimen/formRL</item>
        <item name="android:layout_marginBottom">@dimen/formTB</item>
        <item name="android:layout_marginTop">@dimen/formTB</item>
        <item name="android:drawablePadding">@dimen/formDrawablePadding</item>
        <item name="android:layout_height">26dp</item>
    </style>

    <style name="SpinnerSignUP">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">@dimen/formWidth</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/formRL</item>
        <item name="android:layout_marginEnd">@dimen/formRL</item>
        <item name="android:layout_marginBottom">@dimen/formTB</item>
        <item name="android:layout_marginTop">@dimen/formTB</item>
    </style>

    <style name="btnSignUP">
        <item name="android:background">@drawable/btn_signup</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">Sign up</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">@dimen/authBtnWidth</item>
        <item name="android:layout_height">@dimen/authBtnHeight</item>
        <item name="android:layout_marginStart">74dp</item>
        <item name="android:layout_marginEnd">74dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="builderAuth">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Log in to use this feature</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>






</resources>
