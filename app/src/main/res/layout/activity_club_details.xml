<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ClubDetails">

    <ImageView
            android:layout_width="122dp"
            android:layout_height="122dp" app:srcCompat="@drawable/logo"
            android:id="@+id/im_pic"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/bar"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/follow"
            android:id="@+id/icon_follow"
            app:layout_constraintStart_toEndOf="@+id/im_pic"
            android:layout_marginStart="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/bar"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/message" android:id="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/im_pic"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/icon_follow"/>
    <ImageView
            android:layout_width="411dp"
            android:layout_height="57dp"
            android:id="@+id/bar"
            android:scaleType="center" app:srcCompat="@drawable/orange_bar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Club details"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8"
            app:layout_constraintEnd_toEndOf="@+id/bar" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/bar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/bar"/>
    <ImageView android:id="@+id/notify"
               android:src="@drawable/icon_notify"
               android:layout_width="24dp"
               android:layout_height="24dp"
               app:layout_constraintEnd_toEndOf="@+id/bar"
               android:layout_marginEnd="24dp" android:layout_marginTop="8dp"
               app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
               app:layout_constraintBottom_toBottomOf="@+id/bar"/>


    <TextView
            android:text="32"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nb_members"
            app:layout_constraintStart_toEndOf="@+id/icon_follow"
            android:layout_marginStart="20dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/bar" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/icon_follow"/>
    <TextView
            android:text="Members"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_members"
            app:layout_constraintTop_toBottomOf="@+id/nb_members"
            app:layout_constraintEnd_toEndOf="@+id/nb_members"
            app:layout_constraintStart_toStartOf="@+id/nb_members"/>
    <TextView
            android:text="Club X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_clubTitle"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="22dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <TextView
            android:text="« L’ESSTED PRESSE » est un département qui va  permettre aux étudiants de l’ESSTED ou autres de s’exprimer , suivre les nouveautés du Design en Tunisie et de part et d’autre des quatre coins du monde , interagir et communiquer , mettre au point les cotés défaillants de l’ESSTED et en suggérer des solutions ,… bref , ce club nous permettra d’avoir une voix écoutée et lue . "
            android:layout_width="320dp"
            android:layout_height="wrap_content" android:id="@+id/tv_clubDesc"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            android:layout_marginTop="22dp" app:layout_constraintTop_toBottomOf="@+id/tv_clubTitle"/>
</android.support.constraint.ConstraintLayout>