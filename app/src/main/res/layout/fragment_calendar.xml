<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">




        <ImageView
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:id="@+id/bar" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:scaleType="center" app:srcCompat="@drawable/orange_bar"/>
        <TextView
                android:text="Calendar"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView8"
                app:layout_constraintEnd_toEndOf="@+id/bar" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/bar"
                app:layout_constraintBottom_toBottomOf="@+id/bar"/>
        <ImageView android:id="@+id/filter"
                   android:src="@drawable/icon_notify"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   app:layout_constraintEnd_toEndOf="@+id/bar" android:layout_marginEnd="18dp"
                   app:layout_constraintTop_toTopOf="@+id/bar"
                   app:layout_constraintBottom_toBottomOf="@+id/bar"/>

        <ImageView android:id="@+id/settings"
                   android:src="@drawable/ic_settings"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   app:layout_constraintStart_toStartOf="parent"
                   android:layout_marginStart="18dp"
                   app:layout_constraintTop_toTopOf="@+id/bar"
                   app:layout_constraintBottom_toBottomOf="@+id/bar"/>


    <android.support.v7.widget.RecyclerView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/rvCalendar"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/today" android:layout_marginTop="16dp"/>
    <ImageView android:id="@+id/today"
               android:src="@drawable/today"
               android:layout_width="86dp"
               android:layout_height="32dp"
               android:layout_marginEnd="8dp"
               app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/bar" android:layout_marginTop="16dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAlignment="center"
              android:textSize="15sp"
              android:text="Today"
              android:textColor="@color/white"
              app:layout_constraintEnd_toEndOf="@+id/today" app:layout_constraintStart_toStartOf="@+id/today"
              app:layout_constraintBottom_toBottomOf="@+id/today" app:layout_constraintTop_toTopOf="@+id/today"/>
    <ImageView android:id="@+id/stripe" android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:src="@drawable/stripe"
               android:layout_marginBottom="8dp"
               app:layout_constraintBottom_toBottomOf="@+id/rvCalendar"
               app:layout_constraintStart_toStartOf="@+id/rvCalendar"
               app:layout_constraintEnd_toEndOf="@+id/rvCalendar"/>
    <android.support.v7.widget.CardView
            android:id="@+id/calendarView"
            app:cardCornerRadius="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@id/rvCalendar">
        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               />
    </android.support.v7.widget.CardView>








    <android.support.v7.widget.RecyclerView android:id="@+id/rvMyevents"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            android:layout_marginTop="8dp"
                                            app:layout_constraintTop_toBottomOf="@id/rvCalendar"/>
</android.support.constraint.ConstraintLayout>
