<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Activities.Authentification.SignUP">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
    >


        <TextView
                android:text="Sign up"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="22dp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageView android:id="@+id/back"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/back"
                   app:layout_constraintStart_toStartOf="parent"
                   android:layout_marginStart="20dp" android:layout_marginTop="32dp"
                   app:layout_constraintTop_toTopOf="parent"/>

        <ImageView android:id="@+id/imProfile"
                   android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:src="@drawable/ic_launcher_background"
                   app:layout_constraintTop_toTopOf="parent"
                   android:layout_marginTop="32dp"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"/>

        <EditText android:id="@+id/edUsername"
                  style="@style/signUPField"
                  android:drawableLeft="@drawable/ic_userg"

                  android:hint="Name*"
                  android:inputType="textPersonName"
                  app:layout_constraintTop_toBottomOf="@id/imProfile" app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
        />

        <EditText android:id="@+id/edEmail"
                  style="@style/signUPField"
                  android:drawableStart="@drawable/ic_mailg"
                  android:hint="Email address*"
                  android:inputType="text"
                  app:layout_constraintTop_toBottomOf="@+id/edUsername"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
        />

        <EditText android:id="@+id/edBirth"
                  style="@style/signUPField"
                  android:hint="Birthdate*"
                  android:focusable="false"
                  android:inputType="text"
                  app:layout_constraintTop_toBottomOf="@+id/edEmail" app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
        />

        <Spinner android:id="@+id/spRegion"
                 android:layout_width="292dp"
                 android:layout_height="wrap_content"
                 android:hint="Region*"
                 android:drawableStart="@drawable/ic_regiong"
                 android:gravity="center"
                 app:layout_constraintTop_toBottomOf="@+id/edBirth"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginTop="35dp"/>

        <ImageView android:layout_width="wrap_content" android:layout_height="match_parent"
                   android:src="@drawable/ic_regiong"
                   app:layout_constraintTop_toTopOf="@+id/spRegion"
                   app:layout_constraintBottom_toBottomOf="@+id/spRegion"
                   app:layout_constraintStart_toStartOf="@+id/spRegion" android:layout_marginStart="4dp"
                   android:id="@+id/ic_region"/>
        <EditText android:id="@+id/edGender"
                  style="@style/signUPField"
                  android:hint="Gender*"
                  app:layout_constraintTop_toBottomOf="@+id/spRegion"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"/>
        <EditText android:id="@+id/edPassword"
                  style="@style/signUPField"

                  android:drawableLeft="@drawable/ic_password"
                  android:hint="Password*"
                  android:inputType="textPassword"
                  app:layout_constraintTop_toBottomOf="@+id/edGender"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
        />

        <EditText android:id="@+id/edPasswordC"
                  style="@style/signUPField"
                  android:drawableLeft="@drawable/ic_password"
                  android:hint="Confirm Password*"
                  android:inputType="textPassword"
                  app:layout_constraintTop_toBottomOf="@id/edPassword" app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
        />

        <Button android:id="@+id/btnSignup"
                style="@style/signUPField"
                android:text="Sign up"
                android:textColor="@color/orange"
                android:background="@drawable/btn_signup"
                app:layout_constraintTop_toBottomOf="@+id/edPasswordC"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"

        />

        <com.facebook.login.widget.LoginButton
                android:id="@+id/btnFb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_launcher_background"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btnSignup" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"/>

        <com.google.android.gms.common.SignInButton android:layout_width="100dp"
                                                    android:layout_height="40dp"
                                                    android:id="@+id/btnGoogle"
                                                    app:layout_constraintTop_toBottomOf="@id/btnFb"
                                                    app:layout_constraintEnd_toEndOf="parent"
                                                    android:layout_marginEnd="8dp"
                                                    app:layout_constraintStart_toStartOf="parent"
                                                    android:layout_marginStart="8dp"/>


    </android.support.constraint.ConstraintLayout>


</ScrollView>