<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:paddingEnd="16dp"
                                             android:paddingStart="16dp">

    <android.support.v7.widget.SearchView android:id="@+id/searchPrefs" android:layout_width="match_parent"
                                          android:layout_height="35dp"
                                          style="@style/searchView"
                                          android:iconifiedByDefault="false"
                                          app:queryHint="Rechercher"
                                          android:layout_centerHorizontal="true"
                                          android:background="@drawable/searchview"
                                          android:queryBackground="@android:color/transparent"
                                          app:layout_constraintEnd_toEndOf="parent"
                                          app:layout_constraintStart_toStartOf="parent"
                                          app:layout_constraintTop_toTopOf="parent"
                                          android:layout_marginTop="16dp"
    />

    <android.support.constraint.ConstraintLayout app:layout_constraintEnd_toEndOf="parent"
                                                 app:layout_constraintStart_toStartOf="parent"
                                                 app:layout_constraintTop_toBottomOf="@id/searchPrefs"
                                                 android:layout_marginTop="16dp"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent" android:id="@+id/choices">
        <android.support.v7.widget.CardView android:id="@+id/business"
                                            android:layout_width="0dp"
                                            android:layout_height="60dp"
                                            app:cardCornerRadius="15dp"
                                            app:cardElevation="0dp"
                                            android:backgroundTint="@color/grayShadow"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            android:layout_marginEnd="22dp"
                                            app:layout_constraintEnd_toStartOf="@+id/learning"
                                            android:layout_marginTop="8dp">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      style="@style/Choices"

                      android:text="Business"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView android:id="@+id/design"
                                            android:layout_width="0dp"
                                            android:layout_height="60dp"
                                            app:cardCornerRadius="15dp"
                                            app:cardElevation="0dp"

                                            android:backgroundTint="@color/grayShadow"
                                            app:layout_constraintStart_toStartOf="parent"
                                            android:layout_marginTop="16dp"
                                            app:layout_constraintTop_toBottomOf="@+id/tech"
                                            android:layout_marginEnd="16dp"
                                            app:layout_constraintEnd_toStartOf="@+id/gaming"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            android:layout_marginBottom="8dp">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      style="@style/Choices"
                      android:text="Design"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView android:id="@+id/gaming"
                                            android:layout_width="184dp"
                                            android:layout_height="60dp"
                                            app:cardElevation="0dp"

                                            app:cardCornerRadius="15dp"
                                            android:backgroundTint="@color/grayShadow"
                                            app:layout_constraintTop_toTopOf="@+id/design"
                                            app:layout_constraintBottom_toBottomOf="@+id/design"
                                            app:layout_constraintEnd_toEndOf="parent"
        >
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      style="@style/Choices"
                      android:text="Gaming"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView android:id="@+id/culture"
                                            android:layout_width="92dp"
                                            android:layout_height="60dp"
                                            app:cardCornerRadius="15dp"
                                            app:cardElevation="0dp"

                                            android:backgroundTint="@color/grayShadow"
                                            android:layout_marginTop="16dp"
                                            app:layout_constraintTop_toBottomOf="@+id/business"
                                            app:layout_constraintStart_toStartOf="parent">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      style="@style/Choices"

                      android:text="Culture"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView android:id="@+id/tech"
                                            android:layout_width="0dp"
                                            android:layout_height="60dp"
                                            app:cardCornerRadius="15dp"
                                            app:cardElevation="0dp"

                                            android:backgroundTint="@color/grayShadow"
                                            android:layout_marginTop="16dp"
                                            app:layout_constraintTop_toBottomOf="@+id/culture"
                                            app:layout_constraintStart_toStartOf="parent"
                                            android:layout_marginEnd="8dp"
                                            app:layout_constraintEnd_toStartOf="@+id/sports">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      style="@style/Choices"

                      android:text="Technology"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView android:id="@+id/sports"
                                            android:layout_width="178dp"
                                            android:layout_height="60dp"
                                            app:cardCornerRadius="15dp"
                                            app:cardElevation="0dp"

                                            android:backgroundTint="@color/grayShadow"
                                            app:layout_constraintTop_toTopOf="@+id/tech"
                                            app:layout_constraintBottom_toBottomOf="@+id/tech"
                                            app:layout_constraintEnd_toEndOf="parent"
        >
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      style="@style/Choices"

                      android:text="Sports"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView android:id="@+id/photography"
                                            android:layout_width="92dp"
                                            android:layout_height="60dp"
                                            app:cardCornerRadius="15dp"
                                            app:cardElevation="0dp"

                                            android:backgroundTint="@color/grayShadow"
                                            app:layout_constraintTop_toTopOf="@+id/social"
                                            app:layout_constraintBottom_toBottomOf="@+id/social"
                                            app:layout_constraintEnd_toEndOf="parent"
        >
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      style="@style/Choices"
                      android:text="Photography"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView android:id="@+id/social"
                                            android:layout_width="0dp"
                                            android:layout_height="60dp"
                                            app:cardElevation="0dp"

                                            app:cardCornerRadius="15dp"
                                            android:backgroundTint="@color/grayShadow"
                                            app:layout_constraintEnd_toStartOf="@+id/photography"
                                            android:layout_marginEnd="8dp"
                                            android:layout_marginTop="16dp"
                                            app:layout_constraintTop_toBottomOf="@+id/business"
                                            app:layout_constraintStart_toEndOf="@+id/culture"
                                            android:layout_marginStart="8dp">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      style="@style/Choices"

                      android:layout_gravity="center"
                      android:text="Social"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView android:id="@+id/learning"
                                            android:layout_width="124dp"
                                            android:layout_height="60dp"
                                            app:cardCornerRadius="15dp"
                                            app:cardElevation="0dp" android:backgroundTint="@color/grayShadow"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            android:layout_marginTop="8dp">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      style="@style/Choices"
                      android:text="Learning"/>
        </android.support.v7.widget.CardView>


    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>

