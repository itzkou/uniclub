<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardUniv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
app:cardElevation="0.5dp">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView android:id="@+id/im_university"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:src="@drawable/ic_logo" app:layout_constraintStart_toStartOf="parent"
                   android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
                   android:layout_marginTop="16dp"/>

        <TextView android:id="@+id/tv_univ_title"
                  android:layout_width="195dp"
                  android:textSize="12sp"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toEndOf="@id/im_university"
                  android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                  app:layout_constraintTop_toTopOf="parent"/>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
