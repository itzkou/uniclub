<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardUniv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="1dp">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.v7.widget.CardView android:id="@+id/card" android:layout_width="70dp"
                                            android:layout_height="70dp"
                                            app:cardCornerRadius="15dp"
                                            android:elevation="0.5dp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                                            android:layout_marginTop="8dp"
                                            android:layout_marginBottom="8dp"
                                            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView android:id="@+id/imUniv"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:src="@drawable/ic_logo" android:scaleType="centerCrop"/>
        </android.support.v7.widget.CardView>

        <TextView android:id="@+id/tvUniv"
                  android:layout_width="195dp"
                  android:textSize="12sp"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toEndOf="@id/card"
                  android:layout_marginStart="21dp" android:layout_marginTop="19dp"
                  app:layout_constraintTop_toTopOf="parent"
        />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
