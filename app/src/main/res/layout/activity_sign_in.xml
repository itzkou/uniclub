<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
           xmlns:tools="http://schemas.android.com/tools"
            tools:context=".Authentication.SignIN"
            xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <android.support.constraint.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <TextView
                android:text="Login"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="22dp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <ImageView android:id="@+id/back"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/back"
                   app:layout_constraintStart_toStartOf="parent"
                   android:layout_marginStart="20dp" android:layout_marginTop="32dp"
                   app:layout_constraintTop_toTopOf="parent" android:contentDescription="TODO"/>

        <EditText android:id="@+id/ed_email"
                  android:layout_width="292dp"
                  android:layout_height="wrap_content"
                  android:drawableStart="@drawable/icon_mail"
                  android:hint="Email Address*"
                  android:drawablePadding="8dp"
                  android:textSize="15sp" android:layout_marginEnd="8dp"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="76dp"
                  app:layout_constraintTop_toBottomOf="@+id/back" android:inputType="textEmailAddress"
                  android:autofillHints=""/>

        <EditText android:id="@+id/ed_password"
                  android:layout_width="292dp"
                  android:layout_height="wrap_content"
                  android:drawableStart="@drawable/icon_password"
                  android:hint="Password*"
                  android:drawablePadding="8dp"
                  android:inputType="textPassword"
                  android:textSize="15sp" android:layout_marginTop="40dp"
                  app:layout_constraintTop_toBottomOf="@+id/ed_email" android:layout_marginEnd="8dp"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                  app:layout_constraintStart_toStartOf="parent" android:autofillHints=""/>
        <TextView
                android:text="Forgot password?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_forgot"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="42dp"
                android:layout_marginTop="29dp"
                app:layout_constraintTop_toBottomOf="@+id/ed_password"/>

        <Button android:id="@+id/btn_signin"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:text="Login"
                android:textColor="@color/orange"
                android:background="@drawable/btn_signup"
                android:layout_marginTop="104dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_forgot" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView android:textColor="@color/orange"
                  android:layout_width="wrap_content"
                  android:layout_height="17dp" android:id="@+id/textView3"
                  android:layout_marginTop="132dp"
                  app:layout_constraintTop_toBottomOf="@+id/btn_signin" android:text="---- Or ----"
                  android:textAlignment="center" android:layout_marginEnd="8dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>

        <ImageView android:id="@+id/btn_facebook"
                   android:layout_width="39dp"
                   android:layout_height="39dp"
                   android:src="@drawable/icon_fb"
                   android:contentDescription="TODO"
                   android:layout_marginTop="8dp"
                   app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginStart="32dp"
                   app:layout_constraintStart_toStartOf="@+id/textView3" android:layout_marginBottom="16dp"
                   app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView android:id="@+id/btn_google"
                   android:layout_width="39dp"
                   android:layout_height="39dp"
                   android:src="@drawable/icon_google"
                   android:contentDescription="TODO"
                   android:layout_marginTop="8dp"
                   app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginEnd="32dp"
                   app:layout_constraintEnd_toEndOf="@+id/textView3" android:layout_marginBottom="16dp"
                   app:layout_constraintBottom_toBottomOf="parent"/>


    </android.support.constraint.ConstraintLayout>
</ScrollView>