<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_propic"
            android:id="@+id/imageView7"
            android:scaleType="fitXY" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:id="@+id/bar" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:scaleType="center" app:srcCompat="@drawable/orange_bar"/>
    <ImageView android:id="@+id/filter"
               android:src="@drawable/icon_notify"
               android:layout_width="24dp"
               android:layout_height="24dp"
               app:layout_constraintEnd_toEndOf="@+id/bar" android:layout_marginEnd="18dp"
               app:layout_constraintTop_toTopOf="@+id/bar"
               app:layout_constraintBottom_toBottomOf="@+id/bar"/>

    <ImageView android:id="@+id/settings"
               android:src="@drawable/ic_settings"
               android:layout_width="24dp"
               android:layout_height="24dp"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="18dp"
               app:layout_constraintTop_toTopOf="@+id/bar"
               app:layout_constraintBottom_toBottomOf="@+id/bar"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/bar" app:layout_constraintStart_toStartOf="@+id/bar"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/bar" app:layout_constraintBottom_toBottomOf="@+id/bar"
            android:text="Profile"/>
    <android.support.v7.widget.CardView
            android:layout_width="320dp"
            android:layout_height="80dp"
            android:id="@+id/card"
            app:cardCornerRadius="16dp"
            android:elevation="2dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView7" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView7">
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="match_parent">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="39"
                      android:textColor="@color/black"
                      android:textSize="32dp"
                      android:textAlignment="center"

                      android:id="@+id/nb_favorites"
                      app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                      android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Favorites"
                      android:textColor="@color/black"
                      android:textSize="16dp"
                      android:textAlignment="center"
                      android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/nb_favorites"
                      app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                      android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/tv_email" app:layout_constraintStart_toEndOf="@+id/ic_mail"
              android:layout_marginStart="16dp"
              app:layout_constraintTop_toTopOf="@+id/ic_mail" app:layout_constraintBottom_toBottomOf="@+id/ic_mail"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_mail"
            android:id="@+id/ic_mail" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/card"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_phone"
            app:layout_constraintStart_toEndOf="@+id/ic_phone" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/ic_phone"
            app:layout_constraintBottom_toBottomOf="@+id/ic_phone"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_phone"
            android:id="@+id/ic_phone" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/ic_mail"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_region"
            app:layout_constraintTop_toTopOf="@+id/ic_region" app:layout_constraintBottom_toBottomOf="@+id/ic_region"
            app:layout_constraintStart_toEndOf="@+id/ic_region" android:layout_marginStart="16dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_region"
            android:id="@+id/ic_region" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/ic_phone"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_univ"
            app:layout_constraintTop_toTopOf="@+id/ic_univ" app:layout_constraintBottom_toBottomOf="@+id/ic_univ"
            app:layout_constraintStart_toEndOf="@+id/ic_univ" android:layout_marginStart="16dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_university" android:id="@+id/ic_univ"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/ic_region" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>

</android.support.constraint.ConstraintLayout>