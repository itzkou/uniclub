<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout android:id="@id/bar" android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 app:layout_constraintTop_toTopOf="parent"
                                                 app:layout_constraintEnd_toEndOf="parent"
                                                 app:layout_constraintStart_toStartOf="parent">
        <ImageView
                android:layout_width="0dp"
                android:layout_height="104dp"
                android:id="@+id/bar" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:scaleType="center" app:srcCompat="@drawable/orange_bar"/>
        <TextView
                android:text="Home"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/bar" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/bar"
                android:id="@+id/textView" android:layout_marginTop="24dp"/>
        <ImageView
                android:src="@drawable/ic_notify"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintEnd_toEndOf="@+id/bar" android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@+id/bar"
                android:layout_marginTop="16dp"/>

        <ImageView
                android:src="@drawable/ic_settings"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="@+id/bar"
                android:layout_marginTop="16dp"/>
        <android.support.v7.widget.SearchView android:layout_width="match_parent"
                                              android:layout_height="35dp"
                                              style="@style/searchView"
                                              android:iconifiedByDefault="false"
                                              app:queryHint="Rechercher"
                                              android:layout_centerHorizontal="true"
                                              android:background="@drawable/searchview"
                                              android:queryBackground="@android:color/transparent"
                                              app:layout_constraintEnd_toEndOf="parent"
                                              app:layout_constraintStart_toStartOf="parent"
                                              app:layout_constraintBottom_toBottomOf="parent"
        />
    </android.support.constraint.ConstraintLayout>

    <Spinner android:id="@+id/sp_region"
             android:layout_width="120dp"
             android:background="@drawable/spinner_bg"
             android:textAlignment="center"
             android:layout_height="35dp"
             app:layout_constraintEnd_toEndOf="parent"
             android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
             android:layout_marginStart="8dp" android:layout_marginTop="18dp"
             app:layout_constraintTop_toBottomOf="@+id/bar" app:layout_constraintHorizontal_bias="0.123"/>
    <Spinner android:id="@+id/sp_timing"
             android:layout_width="120dp"
             android:textAlignment="center"

             android:layout_height="35dp"
             android:background="@drawable/spinner_bg"
             app:layout_constraintEnd_toEndOf="parent"
             android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
             android:layout_marginStart="8dp" android:layout_marginTop="18dp"
             app:layout_constraintTop_toBottomOf="@+id/bar" app:layout_constraintHorizontal_bias="0.88"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/rvHome"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sp_region"
            android:layout_marginTop="16dp"/>
</android.support.constraint.ConstraintLayout>