<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rootClub"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        >
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v7.widget.CardView android:id="@+id/card" android:layout_width="70dp"
                                            android:layout_height="70dp"
                                            app:cardCornerRadius="15dp"
                                            android:elevation="0.1dp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                                            android:layout_marginTop="8dp"
                                            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent">
            <ImageView android:id="@+id/imClub"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:src="@drawable/ic_logo" android:scaleType="centerCrop"/>
        </android.support.v7.widget.CardView>
        <TextView android:id="@+id/tvClub"
                  android:layout_width="wrap_content"
                  android:textSize="12sp"
                  android:textAlignment="center"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toTopOf="@+id/card"
                  app:layout_constraintBottom_toBottomOf="@+id/card"
                  app:layout_constraintStart_toEndOf="@+id/card" android:layout_marginStart="24dp"/>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
