<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.ClubsFilter">
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
    >

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rvUnivs"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/searchUnivs"/>
        <android.support.v7.widget.SearchView
                android:id="@+id/searchUnivs"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                style="@style/searchView"
                android:clickable="true"
                android:focusable="true"

                app:divider="@null"
                android:iconifiedByDefault="false"
                app:defaultQueryHint="Type your university"
                app:searchHintIcon="@null"
                android:background="@drawable/searchview"
                android:queryBackground="@android:color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:clickable="false"
            android:backgroundTint="@color/white"
    >
        <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapse"
                app:collapsedTitleGravity="center"
                app:expandedTitleGravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/white"
                android:backgroundTint="@color/white"
                android:background="@color/white"

        >

            <android.support.constraint.ConstraintLayout
                    android:id="@+id/bar"
                    android:background="@drawable/orange_bar"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:elevation="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:visibility="visible">

                <ImageView android:layout_width="18dp" android:layout_height="23dp"
                           android:src="@drawable/ic_notifs"
                           android:id="@+id/editProfile"
                           app:layout_constraintEnd_toEndOf="parent"
                           android:layout_marginEnd="16dp" android:layout_marginTop="8dp"
                           app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                           app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView android:layout_width="30dp"
                           android:layout_height="30dp"
                           android:id="@+id/settings"
                           android:src="@drawable/ic_profilp"
                           android:fitsSystemWindows="true"
                           app:layout_collapseMode="parallax"
                           android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
                           android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                           android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Universities"
                          android:textSize="18sp"
                          android:fontFamily="@font/raleway_semi_bold" android:layout_marginTop="8dp"
                          app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                          app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                          android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                          android:layout_marginStart="8dp"/>


            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                         android:layout_height="75dp"
                                                         android:background="@drawable/cards"/>

        </android.support.design.widget.CollapsingToolbarLayout>


    </android.support.design.widget.AppBarLayout>


</android.support.design.widget.CoordinatorLayout>