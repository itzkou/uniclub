<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.ClubsFilter">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/bar" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:scaleType="center" app:srcCompat="@drawable/orange_bar"/>
    <ImageView android:id="@+id/back_black"
               android:src="@drawable/back_black"
               android:layout_width="16dp"
               android:layout_height="16dp"
               app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="18dp"/>
    <TextView
            android:text="Clubs details"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_clubTitle"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/bar" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/rvClubs"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/bar" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>