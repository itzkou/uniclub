<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Authentication.Auth">

    <ImageView
            android:layout_width="88dp"
            android:layout_height="114dp" app:srcCompat="@drawable/logo2"
            android:id="@+id/imageView" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <TextView
            android:text="Welcome"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.492" android:layout_marginTop="120dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <Button android:id="@+id/btn_signup"
            android:layout_width="260dp"
            android:textAlignment="center"
            android:textColorHighlight="@color/orange"
            android:layout_height="35dp"
            android:stateListAnimator="@null"
            android:background="@drawable/btn_signup"
            android:textColor="@color/orange"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_signin" android:text="Sign up"/>
    <Button android:id="@+id/btn_signin"
            android:layout_width="260dp"
            android:textAlignment="center"
            android:textColorHighlight="@color/orange"
            android:layout_height="35dp"
            android:background="@drawable/btn_signup"
            android:textColor="@color/orange"
            android:stateListAnimator="@null"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.503"
            android:layout_marginBottom="64dp" app:layout_constraintBottom_toBottomOf="parent" android:text="Log in"/>
</android.support.constraint.ConstraintLayout>