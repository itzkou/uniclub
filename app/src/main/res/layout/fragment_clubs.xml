<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">


    <ImageView
            android:layout_width="0dp"
            android:layout_height="128dp"
            android:id="@+id/bar" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:scaleType="center" app:srcCompat="@drawable/orange_bar"/>
    <TextView
            android:text="Clubs"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8"
            app:layout_constraintEnd_toEndOf="@+id/bar" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/bar"
            android:layout_marginTop="16dp"/>
    <ImageView android:id="@+id/filter"
               android:src="@drawable/icon_notify"
               android:layout_width="24dp"
               android:layout_height="24dp"
               app:layout_constraintEnd_toEndOf="@+id/bar" android:layout_marginEnd="18dp"
               app:layout_constraintTop_toTopOf="@+id/bar"
               android:layout_marginTop="16dp"/>

    <ImageView android:id="@+id/settings"
               android:src="@drawable/ic_settings"
               android:layout_width="24dp"
               android:layout_height="24dp"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="18dp"
               app:layout_constraintTop_toTopOf="@+id/bar"
               android:layout_marginTop="16dp"/>


    <android.support.v7.widget.SearchView android:id="@+id/searchView"
                                          android:layout_width="320dp"
                                          android:layout_height="35dp"
                                          app:queryHint="Rechercher"
                                          app:queryBackground="@drawable/searchview"
                                          app:iconifiedByDefault="false"

                                          android:layout_marginEnd="8dp"
                                          app:layout_constraintStart_toStartOf="parent"
                                          android:layout_marginStart="8dp" android:layout_marginBottom="16dp"
                                          app:layout_constraintBottom_toBottomOf="@+id/bar"
                                          app:layout_constraintEnd_toEndOf="parent"
                                          />


    <android.support.v7.widget.RecyclerView android:id="@+id/rvUnivs"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintHorizontal_bias="1.0"
                                            android:layout_marginTop="16dp"
                                            app:layout_constraintTop_toBottomOf="@+id/searchView"
                                            android:layout_marginBottom="8dp"
                                            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>



