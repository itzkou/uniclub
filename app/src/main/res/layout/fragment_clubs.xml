<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">


    <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/imageView2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:scaleType="center" app:srcCompat="@drawable/orange_bar"/>
    <TextView
            android:text="Clubs"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8"
            app:layout_constraintEnd_toEndOf="@+id/imageView2" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"/>
    <ImageView android:id="@+id/filter"
               android:src="@drawable/filtre"
               android:layout_width="24dp"
               android:layout_height="24dp"
               app:layout_constraintEnd_toEndOf="@+id/imageView2" android:layout_marginEnd="18dp"
               app:layout_constraintTop_toTopOf="@+id/imageView2"
               app:layout_constraintBottom_toBottomOf="@+id/imageView2"/>

    <ImageView android:id="@+id/settings"
               android:src="@drawable/settings"
               android:layout_width="24dp"
               android:layout_height="24dp"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="18dp"
               app:layout_constraintTop_toTopOf="@+id/imageView2"
               app:layout_constraintBottom_toBottomOf="@+id/imageView2"/>

    <android.support.v7.widget.SearchView android:layout_width="320dp"
                                          android:layout_height="35dp"
                                          app:layout_constraintTop_toBottomOf="@id/imageView2"
                                          app:layout_constraintEnd_toEndOf="parent"
                                          android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                                          android:layout_marginStart="20dp"
                                          android:layout_marginTop="24dp" android:id="@+id/searchView"/>

    <android.support.v7.widget.RecyclerView android:id="@+id/rvUnivs"
                                            android:layout_width="match_parent"
                                            android:layout_height="527dp"
                                            android:layout_marginTop="8dp"
                                            app:layout_constraintTop_toBottomOf="@+id/searchView"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>



