<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" >
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
            <item
                    android:bottom="1dp"
                    android:left="-2dp"
                    android:right="-2dp"
                    android:top="-2dp">
                <shape android:shape="rectangle" >
                    <stroke
                            android:width="1px"
                            android:color="@color/orange" />

                    <solid android:color="@color/trans" />

                    <padding
                            android:bottom="5dp"
                            android:left="5dp"
                            android:right="5dp"
                            android:top="5dp" />
                </shape>
            </item>

        </layer-list>
    </item>
    <item  android:state_focused="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
            <item
                    android:bottom="1dp"
                    android:left="-2dp"
                    android:right="-2dp"
                    android:top="-2dp">
                <shape android:shape="rectangle" >
                    <stroke
                            android:width="1px"
                            android:color="#CCCCCC" />

                    <solid android:color="#00FFFFFF" />

                    <padding
                            android:bottom="5dp"
                            android:left="5dp"
                            android:right="5dp"
                            android:top="5dp" />
                </shape>
            </item>

        </layer-list>
    </item>
</selector>